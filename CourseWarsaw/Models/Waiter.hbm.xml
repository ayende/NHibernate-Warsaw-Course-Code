<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
				   assembly="CourseWarsaw"
				   namespace="CourseWarsaw.Models">
	<class name="Waiter"
		   table="Waiters">
		<id name="Id">
			<generator class="identity"/>
		</id>
		<property name="Name"/>
		<dynamic-component name="Attributes">
			<property name="SpeaksPolish" type="System.Boolean"/>
		</dynamic-component>
	</class>
</hibernate-mapping>